<h1><%= @post.title %></h1>

<p><%= @post.content %></p>

<% if current_user.username == @post.user.username%>
    <li><%= link_to "Edit", edit_post_path(@post) %></li>
    <li><%= link_to "Delete", post_path(@post), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
<% end %>
<p>Author: <%= @post.user.username%> </p>